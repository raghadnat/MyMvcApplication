    <title>@ViewBag.Title</title>


    @Styles.Render("~/Sidebar")
    <link href="~/fonts/bootstrap.min.css" rel="stylesheet" />
    <script src="~/fonts/bootstrap.min.js"></script>
</head>
<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Sidebar
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Student")">Student</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Classes")">Classes</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Teacher")">Teacher</a>
                </li>

            </ul>
        </div>


